<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="io.github.marcosignoretto.swipeviewexample.MainActivity">

    <!-- Default SwipeView -->
    <io.github.marcosignoretto.swipeview.SwipeView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    <!-- Default with custom layout -->
    <io.github.marcosignoretto.swipeview.SwipeView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_layout="@layout/delete_back_view"
            app:front_layout="@layout/report_item_front"
    />

    <!-- Default SwipeView -->
    <io.github.marcosignoretto.swipeview.SwipeView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            app:opening_size="100dp"
            android:layout_height="100dp"/>

    <!-- Default SwipeView -->
    <io.github.marcosignoretto.swipeview.SwipeView
            android:layout_marginTop="16dp"
            android:id="@+id/view4"
            android:layout_width="match_parent"
            app:opening_size="100dp"
            android:layout_height="100dp"
            app:opening_side="left"
    />


</LinearLayout>